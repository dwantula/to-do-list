{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": {
      "description": "URL twojego projektu Supabase",
      "required": true
    },
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": {
      "description": "Publiczny klucz (anon key) z Supabase",
      "required": true
    },
    "SUPABASE_SERVICE_ROLE_KEY": {
      "description": "Klucz serwisowy z Supabase (tylko dla API routes)",
      "required": false
    }
  }
}
